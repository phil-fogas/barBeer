{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
{% if beers %}

{% for beer in beers %}

<article class="card card-body">

<header>
<h5 class="card-title">
    <a class="nav-link"  href="{{ path('showBeer', { id : beer.id}) }}">{{ beer.name }}</a>
    </h5>
</header>
 <main> 
   <div>
      {% if beer.publishedAt is defined %} 
       <p>Date de cr√©ation:{{ beer.publishedAt | date('d/m/Y')}}</p>
      {% endif %}  

      {% if beer.price is defined  %}
      Prix: {{ beer.price }} &euro;
      {% endif %}
  </div>
    <div>
   
      Description: {{ beer.description ?? 'pas description'}}
      </div>
    <div>
    <img src="{{ asset('build/images/biere.jpg') }}" class="rounded mx-auto d-block" alt="biere" />
    </div>

     {% include 'partials/meta.html.twig' %}

  
</main>
<footer>
</footer>
</article>

{% endfor %}

{% else %}
<p>Aucune biere</p>


{% endif %}
{% endblock %}
